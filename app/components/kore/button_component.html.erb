<%= render Kore::ApplicationComponent.new(**@options) do %>
  <% if @left_icon %>
    <%= heroicon @left_icon, options: { class: "-ml-0.5 mr-2 h-4 w-4"}  %>
  <% end %>
  <%= @text || content %>
  <% if @right_icon %>
    <%= heroicon @right_icon, options: { class: "h-4 w-4 ml-2 -mr-0.5"}  %>
  <% end %>
<% end %>

